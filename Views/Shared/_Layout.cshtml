@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Findstate - Free Bootstrap 4 Template by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- GOOGLE FONT -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet">

    <!-- CSS FILES -->
    <link rel="stylesheet" href="~/user/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/user/css/animate.css">
    <link rel="stylesheet" href="~/user/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/user/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/user/css/magnific-popup.css">
    <link rel="stylesheet" href="~/user/css/aos.css">
    <link rel="stylesheet" href="~/user/css/ionicons.min.css">
    <link rel="stylesheet" href="~/user/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/user/css/jquery.timepicker.css">
    <link rel="stylesheet" href="~/user/css/flaticon.css">
    <link rel="stylesheet" href="~/user/css/icomoon.css">
    <link rel="stylesheet" href="~/user/css/style.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Findstate</a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav">
                <span class="oi oi-menu"></span> Menu
            </button>

            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav ml-auto">

                    <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="About" class="nav-link">About</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="Services" class="nav-link">Services</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="Agent" class="nav-link">Agent</a></li>
                    <!-- CORRECT Links -->
                    <li class="nav-item"><a asp-controller="Home" asp-action="Properties" class="nav-link">Properties</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="Blog" class="nav-link">Blog</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a></li>

                    <li class="nav-item">

                        <a asp-controller="Account" asp-action="Register"
                           class="btn btn-warning ml-3 px-4 py-2 rounded-pill shadow-lg">
                            <i class="icon-user mr-1"></i> Login / Register
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="ftco-footer ftco-section">
        <div class="container">
            <div class="row mb-5">

                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2>Findstate</h2>
                        <p>Far far away, behind the word mountains.</p>
                        <ul class="ftco-footer-social">
                            <li><a href="#"><span class="icon-twitter"></span></a></li>
                            <li><a href="#"><span class="icon-facebook"></span></a></li>
                            <li><a href="#"><span class="icon-instagram"></span></a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2>Community</h2>
                        <ul>
                            <li><a href="#">Search</a></li>
                            <li><a href="#">Agents</a></li>
                            <li><a href="#">Reviews</a></li>
                            <li><a href="#">FAQs</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2>About</h2>
                        <ul>
                            <li><a href="#">Our Story</a></li>
                            <li><a href="#">Team</a></li>
                            <li><a href="#">Careers</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2>Company</h2>
                        <ul>
                            <li><a href="#">About</a></li>
                            <li><a href="#">Press</a></li>
                            <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2>Have a Question?</h2>
                        <ul>
                            <li>203 Fake Street, USA</li>
                            <li>+92 300 0000000</li>
                            <li>info@example.com</li>
                        </ul>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-12 text-center">
                    <p>
                        &copy; <script>document.write(new Date().getFullYear())</script> Findstate |
                        Template by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                    </p>
                </div>
            </div>

        </div>
    </footer>

    <div id="ftco-loader" class="show fullscreen">
        <svg class="circular" width="48px" height="48">
            <circle class="path-bg" cx="24" cy="24" r="22"></circle>
            <circle class="path" cx="24" cy="24" r="22"></circle>
        </svg>
    </div>

    <!-- JS FILES -->
    <script src="~/user/js/jquery.min.js"></script>
    <script src="~/user/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/user/js/popper.min.js"></script>
    <script src="~/user/js/bootstrap.min.js"></script>
    <script src="~/user/js/jquery.waypoints.min.js"></script>
    <script src="~/user/js/jquery.stellar.min.js"></script>
    <script src="~/user/js/owl.carousel.min.js"></script>
    <script src="~/user/js/jquery.magnific-popup.min.js"></script>
    <script src="~/user/js/aos.js"></script>
    <script src="~/user/js/jquery.animateNumber.min.js"></script>
    <script src="~/user/js/bootstrap-datepicker.js"></script>
    <script src="~/user/js/jquery.timepicker.min.js"></script>
    <script src="~/user/js/scrollax.min.js"></script>
    <script src="~/user/js/google-map.js"></script>
    <script src="~/user/js/main.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
